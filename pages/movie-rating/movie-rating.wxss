/* pages/movie-rating/movie-rating.wxss */

.rating {
  display:flex;
  flex-direction: row;
  margin: 10rpx 0;
  position: relative;
}
.rating-star {
  background-image: url(http://static.nipic.com/images/works_star_png24.png);
  width: 50px;
  height: 10px;
  background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
}
.allstar0 {
  background-position: 0 0;
}
.allstar1 {
  background-position: 0 -10px;
}
.allstar2 {
  background-position: 0 -20px;
}
.allstar3 {
  background-position: 0 -30px;
}
.allstar4 {
  background-position: 0 -40px;
}
.allstar5 {
  background-position: 0 -50px;
}

.allstar6 {
  background-position: 0 -60px;
}

.allstar7 {
  background-position: 0 -70px;
}

.allstar8 {
  background-position: 0 -80px;
}

.allstar9 {
  background-position: 0 -90px;
}

.allstar10 {
  background-position: 0 -100px;
}

.rating-average {
  margin-left: 120rpx;
  font-size: 20rpx;
  height: 22rpx;
  line-height: 22rpx;
  color: #888;
}


