/* pages/movie-detail/movie-detail.wxss */
@import '/pages/movie-rating/movie-rating.wxss';

.container {
  background: #f7f7f7;
}

.session-poster {
  display: flex;
  align-items: center;
  width: 100%;
  background: #e9e9e9;
}

.session-poster .poster {
  width: 100%;
  height: 380rpx;
  filter: blur(3rpx);
  -webkit-filter: blur(3rpx);
}

.session-poster .poster-left {
  position: absolute;
  display: inline-block;
  margin-top: 60rpx;
  padding: 40rpx;
  text-align: center;
  width: 280rpx;
  height: 350rpx;
}

.movie-rating {
  width: 100%;
  position: absolute;
  left: 360rpx;
  top: 150rpx;
}

.movie-rating .name {
  display: block;
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.movie-rating .average {
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
  display: inline-block;
  color: #fff;
  font-size: 60rpx;
  vertical-align: bottom;
  padding-top: 10rpx;
}

.movie-rating .rating-box {
  display: inline-block;
  position: absolute;
  left: 100rpx;
  top: 50rpx;
}

.movie-rating .rating {
  padding-bottom: 20rpx;
}

.movie-rating .ratings_count {
  color: #fff;
}

.summary-session {
  display: flex;
  flex-direction: row;
  height: 260rpx;
  align-items: center;
}

.movie-summary {
  display: flex;
  flex-direction: column;
  width: 520rpx;
  margin: 40rpx;
}

.movie-summary .subtype, .origin-name, .countries {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #9e9e9e;
}

.session-wish-do {
  width: 100%;
  display: flex;
}

.session-wish-do .wish-btn, .do-btn {
  flex: 1;
  margin: 15rpx 30rpx 30rpx 30rpx;
  font-size: 28rpx;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  border: 1px solid #fa3;
  border-radius: 10rpx;
  color: #fa3;
}

.session-desc {
  width: 90%;
  padding: 24rpx;
  line-height: 1.6;
}

.session-desc .title {
  display: inline-block;
  padding-bottom: 30rpx;
  color: #9e9e9e;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 36rpx;
}

.desc-wrapper {
  display: inline-block;
}

.desc-session .desc-content {
  font-size: 24rpx;
  color: #4a4a4a;
  line-height: 38rpx;
  text-indent: 2em;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}

.desc-session .desc-content-auto {
  height: auto;
}

.desc-session .desc-content-3line {
  height: 114rpx;
}

.desc-session .extension {
  background: #fff;
  height: 38rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #32cd32;
}
